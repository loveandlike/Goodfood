<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/student"
            />

        <!--<com.example.administrator.eatgood.setfront.MyTextView-->
        <!--android:id="@+id/menu_main_textview"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="40sp"-->
        <!--android:gravity="center"-->
        <!--android:contentDescription="@string/app_name"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_centerHorizontal="true" >-->
        <!---->
        <!--</com.example.administrator.eatgood.setfront.MyTextView>-->
    </RelativeLayout>

    <SearchView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:imeOptions="actionGo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/jiachangcai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"
                android:drawableTop="@mipmap/recipe_lable_4_2"
                android:text="家常菜" />

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/kuaishoucai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"

                android:drawableTop="@mipmap/recipe_lable_5_3"
                android:text="快手菜" />

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/chuangyicai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"

                android:drawableTop="@mipmap/recipe_lable_1_1"
                android:text="创意菜" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sucai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"

                android:drawableTop="@mipmap/recipe_lable_5_1"
                android:text="素菜" />

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/liangcai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"

                android:drawableTop="@mipmap/recipe_lable_2_3"
                android:text="凉菜" />

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/hongbei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/se"
                android:drawableTop="@mipmap/recipe_lable_4_1"
                android:text="烘焙" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mianshi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"
                android:drawableTop="@mipmap/recipe_lable_3_1"
                android:text="面食" />

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/tang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"
                android:drawableTop="@mipmap/recipe_lable_3_2"
                android:text="汤" />

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/zhizhitiaoliaowei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_press_main"
                android:drawableTop="@mipmap/recipe_lable_1_3"
                android:text="自制调味料" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allcai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/se"
            android:text="全部菜谱分类"
            android:textSize="30sp" />

    </LinearLayout>
</LinearLayout>